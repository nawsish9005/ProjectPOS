@model ProjectPosClient.Models.Invoice

<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderNumber" class="control-label"></label>
                <input asp-for="OrderNumber" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PayMethod" class="control-label"></label>
                <input asp-for="PayMethod" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label"></label>
                <input asp-for="TotalAmount" class="form-control" readonly  />
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @*@foreach (var item in Model.InvoiceDetails)*@
                    @for (int i = 0; i < Model.InvoiceDetails.Count; i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.InvoiceDetails[i].ProductName" class="form-control" readonly />
                            </td>
                            <td>
                                <input asp-for="@Model.InvoiceDetails[i].Price" class="form-control" readonly />
                            </td>
                            <td>
                                <input asp-for="@Model.InvoiceDetails[i].Quantity" class="form-control" readonly />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>